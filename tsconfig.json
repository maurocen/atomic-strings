{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/tests/*",
  ],
  "baseUrl": "./src",
  "paths": {
    "@interfaces/*": ["interfaces/*"],
    "@classes/*": ["classes/*"],
    "@utils/*": ["utils/*"]
  }
}
